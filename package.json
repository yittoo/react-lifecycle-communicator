{
  "name": "react-lifecycle-communicator",
  "version": "0.0.3",
  "description": "Helper library that allows communication inside to react lifecycle",
  "keywords": [
    "react",
    "communicator",
    "hooks",
    "lifecycle",
    "EventEmitter"
  ],
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "types": "index.d.ts",
  "exports": {
    "./*": {
      "types": "./build/types/index.d.ts",
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js",
      "default": "./build/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "npx rimraf dist && npm run tsc && node ./scripts/prepare-package-json.js",
    "lint": "eslint \"?(src|__tests__)/**/*.ts{,x}\"",
    "test": "npm run lint && jest",
    "publish": "npm run lint && npm run build && npm publish",
    "tsc": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "@types/react": "18.2.13",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "eslint": "8.43.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "5.1.3"
  },
  "author": "Yigit Sozer",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yittoo/react-lifecycle-communicator.git"
  },
  "bugs": {
    "url": "https://github.com/yittoo/react-lifecycle-communicator/issues"
  },
  "homepage": "https://github.com/yittoo/react-lifecycle-communicator#readme"
}
