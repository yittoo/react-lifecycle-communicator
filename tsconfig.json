{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types"
        ],
        "noEmitOnError": true,
        "removeComments": true,
        "sourceMap": true,
        "module": "ESNext",
        "target": "ES6",
        "noImplicitAny": false,
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "includes": [
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "__tests__/**"
    ]
}
